#!/usr/bin/env rc

BROWSER='chromium'
PATH=$PLAN9/bin:$PATH

PAGER=$PLAN9/bin/nobs
MANPAGER=$PLAN9/bin/nobs

TERM='dumb'

acmeshell=$PLAN9/bin/rc
shell=$PLAN9/bin/rc
SHELL=$PLAN9/bin/rc
prompt='% '

user=$USER
home=$HOME

tabstop=4

vfont=$PLAN9/font/lucidasans/unicode.8.font
ffont=$PLAN9/font/lucm/unicode.9.font


fn cd { builtin cd $1 && awd $sysname }

exec acme -a -m /n/acme -l $home/acme.dump -f $vfont -F $ffont $*
