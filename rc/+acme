#!/usr/bin/env rc

. 9.rc

ns=`{namespace}
if(! test -r $ns/plumb){
	plumber > /tmp/plumber.log >[2=1] &
}

PAGER=nobs
MANPAGER=nobs
TERM=dumb

acmeshell=rc
shell=rc
prompt='% '

user=$USER
varfont=$PLAN9/font/gofont/GoMedium/10a/font
fixfont=$PLAN9/font/gofont/GoMono/10a/font

fn cd { builtin cd $1 && awd $sysname }
exec acme -a -f $varfont -F $fixfont $*

